/*******************************
         Site Overrides
*******************************/
#sidebar-toggle {
  position: absolute;
  z-index: 1000;
  cursor: pointer;
}

.ui.main.menu {
  margin: 0 0 1rem;
  border-radius: 0;
}

.ui.inverted.main.menu {
  box-shadow: @boxShadow;
}

.main.menu .brand.item {
  display: block;
  margin: 0;
  width: 100%;
  font-weight: bold;
  text-align: center;
}